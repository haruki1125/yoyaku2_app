<%= form_with(model: @message, url: message_index_path, local: true) do |form| %>

  <div class="content">
    <%= form.label :message %>
    <%= form.text_field :message %>
  </div>

  <div class="time">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>